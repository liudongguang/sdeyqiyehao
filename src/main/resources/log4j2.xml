<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<!-- 配置日志输出文件名字 追加读写 -->
		<RollingFile name="infoFile" fileName="/var/sdeyqiyehao.log"
			filePattern="/var/sdeyqiyehao/info.%d{yyyy-MM-dd}.log" append="true">
			<!-- 输出格式 -->
			<PatternLayout
				pattern="[%l] [%t] [%-4r] [%d{yyyy-MM-dd HH:mm:ss,SSS}] [%p] \: %m%n" />
			<!-- 设置策略 -->
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="false" />
			</Policies>
		</RollingFile>
		<!-- 标准输出 -->
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="[%l] [%t] [%-4r] [%d{yyyy-MM-dd HH:mm:ss,SSS}] [%p] \: %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- 配置记录器级别 -->
		<Root level="ERROR">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="infoFile" />
		</Root>
		<Logger name="com.yzcx.impl.mapper" level="ERROR"  additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
	</Loggers>
</Configuration> 